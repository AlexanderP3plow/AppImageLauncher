<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:AppImageLauncher.ViewModels"
        x:DataType="vm:NewAppViewModel"
        mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="340"
        x:Class="AppImageLauncher.Views.NewApp"
        CanResize="False"
        Width="550"
        Height="340"
        Title="">
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                Margin="10">
        <StackPanel.Styles>
            <Style Selector="TextBox">
                <Setter Property="Width"
                        Value="400"></Setter>
                <Setter Property="Margin"
                        Value="0,10,0,0"></Setter>
            </Style>
        </StackPanel.Styles>
        <TextBox Watermark="Application Name: " x:Name="NewAppName"></TextBox>
        <StackPanel Orientation="Horizontal" Margin="35,0,0,0">
            <TextBox Watermark="Executable File: "
                     x:Name="Executable"></TextBox>
            <Button Width="25"
                    Height="25"
                    Click="OpenExecutableFileDialog"
                    Margin="10,10,0,0">
                <TextBlock Text="..."></TextBlock>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="35,0,0,0">
            <TextBox Watermark="Icon File: "
                     x:Name="IconFile"></TextBox>
            <Button Width="25"
                    Height="25"
                    Click="OpenImageFileDialog"
                    Margin="10,10,0,0">
                <TextBlock Text="..."></TextBlock>
            </Button>
         </StackPanel>
        <ListBox Margin="0,10,0,0"
                 Width="400"
                 ItemsSource="{Binding ConfigFileContent.Categories}"
                 SelectionChanged="SetSelectedCategories"
                 SelectionMode="Multiple">
            <ListBox.Styles>
                <Style Selector="ListBoxItem">
                    <Setter Property="Width"
                            Value="380"></Setter>
                </Style>
            </ListBox.Styles>
        </ListBox>
        <TextBox Watermark="Argument: " x:Name="NewAppArg"></TextBox>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="30"
                    Margin="0,20,0,0">
            <Button Width="60"
                    Click="WriteNewApp">Save</Button>
            <Button Width="60"
                    Click="Close">Abort</Button>
        </StackPanel>
    </StackPanel>
</Window>
